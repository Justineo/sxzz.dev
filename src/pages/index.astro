---
import Layout from '../layouts/Layout.astro'

const links = {
  creator: [
    { name: 'tsdown', href: 'https://tsdown.dev' },
    { name: 'Vue Macros', href: 'https://vue-macros.dev' },
    { name: 'Elk', href: 'https://github.com/elk-zone/elk' },
  ],
  team: [
    { name: 'Vue', href: 'https://vuejs.org' },
    { name: 'Vite', href: 'https://vitejs.dev' },
    { name: 'VueUse', href: 'https://vueuse.org' },
    { name: 'unjs', href: 'https://unjs.io' },
    { name: 'unplugin', href: 'https://github.com/unplugin' },
    { name: 'Oxc', href: 'https://oxc.rs' },
  ],
  social: [
    { icon: 'i-simple-icons-github', href: 'https://github.com/sxzz', label: 'GitHub' },
    { icon: 'i-simple-icons-bluesky', href: 'https://bsky.app/profile/sxzz.dev', label: 'Bluesky' },
    { icon: 'i-simple-icons-x', href: 'https://x.com/sanxiaozhizi', label: 'X' },
  ],
}
---

<Layout
  title="Kevin Deng - Open Source Enthusiast"
  description="Kevin Deng is an open-source enthusiast exploring front-end development. Creator of tsdown, Vue Macros, and Elk. Core team member of Vue, Vite, and more."
>
  <main class="min-h-dvh flex items-center justify-center px-6 py-16 md:px-12">
    <div class="max-w-xl w-full space-y-8">
      <header>
        <h1
          class="text-4xl md:text-5xl font-700 tracking-tight text-gray-950 dark:text-white"
        >
          Kevin Deng
        </h1>
        <p class="mt-3 text-lg text-gray-500 dark:text-gray-400">
          Open-source enthusiast
        </p>
      </header>

      <div class="space-y-10">
        <section>
          <h2
            class="text-xs font-600 text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-4"
          >
            Creator
          </h2>
          <div class="flex flex-wrap gap-2">
            {links.creator.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-3.5 py-1.5 text-sm font-500 rounded-full border border-gray-200 dark:border-neutral-800 text-gray-700 dark:text-gray-300 hover:border-gray-400 dark:hover:border-neutral-600 hover:text-gray-950 dark:hover:text-white transition-colors duration-150"
              >
                {link.name}
              </a>
            ))}
          </div>
        </section>

        <section>
          <h2
            class="text-xs font-600 text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-4"
          >
            Team Member
          </h2>
          <div class="flex flex-wrap gap-2">
            {links.team.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center px-3.5 py-1.5 text-sm font-500 rounded-full border border-gray-200 dark:border-neutral-800 text-gray-700 dark:text-gray-300 hover:border-gray-400 dark:hover:border-neutral-600 hover:text-gray-950 dark:hover:text-white transition-colors duration-150"
              >
                {link.name}
              </a>
            ))}
          </div>
        </section>
      </div>

      <footer class="flex items-center gap-5">
        {links.social.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 dark:text-gray-600 hover:text-gray-900 dark:hover:text-gray-200 transition-colors duration-150"
            aria-label={link.label}
          >
            <div class:list={[link.icon, 'w-5 h-5']} />
          </a>
        ))}
      </footer>
    </div>
  </main>
</Layout>
